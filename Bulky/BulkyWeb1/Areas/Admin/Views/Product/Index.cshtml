@model List<Product>


<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="col-12 text-center">
			<h2 class="text-white py-2">Products</h2>

		</div>
	</div>
	<div class="card-body p-4">
		<div class="rowpb-3">
			<div class="col-12 text-end">
				<a asp-controller="Product" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Product</a>
			</div>
		</div>
		<table class="table table-bordered table-striped mt-2">
			<thead>
				<tr>
					<th>Title</th>
					<th>Description</th>
					<th>ISBN</th>
					<th>Author</th>
					<th>List Price</th>
					<th>Price</th>
					<th>Price50</th>
					<th>Price100</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var obj in Model.OrderBy(u => u.Price))
				{
					<tr>
						<td>@obj.Title</td>
						<td>@obj.Description</td>
						<td>@obj.ISBN</td>
						<td>@obj.Author</td>
						<td>@obj.ListPrice</td>
						<td>@obj.Price</td>
						<td>@obj.Price50</td>
						<td>@obj.Price100</td>
						<td>
							<div class="w-60 btn-group" role="group">
								<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
									<i class="bi bi-pencil-square"></i> Edit

								</a>
								<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
									<i class="bi bi-trash"></i> Delete

								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>


<div class="container">
	
</div>